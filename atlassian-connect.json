{
  "key": "down-timer",
  "name": "Timer to Countdown",
  "description": "Countdowns and timers",
  "vendor": {
    "name": "Mykola Gurov",
    "url": "https://github.com/mgurov/"
  },
  "links": {
    "self": "{{localBaseUrl}}/atlassian-connect.json",
    "homepage": "{{localBaseUrl}}"
  },
  "capabilities": {
    "hipchatApiConsumer": {
      "scopes": [
        "send_notification",
        "view_room"
      ],
      "avatar": {
        "url": "{{localBaseUrl}}/img/logo.png",
        "url@2x": "{{localBaseUrl}}/img/logo.png"
      }
    },
    "installable": {
      "callbackUrl": "{{localBaseUrl}}/installable"
    },
    "configurable": {
      "url": "{{localBaseUrl}}/config"
    },
    "webhook": {
      "url": "{{localBaseUrl}}/webhook",
      "pattern": "^/timer",
      "event": "room_message",
      "name": "Timer-wh!",
      "authentication": "jwt"
    },
    "glance": [
      {
        "name": {
          "value": "Timer-gl!"
        },
        "queryUrl": "{{localBaseUrl}}/glance",
        "key": "down-time.glance",
        "target": "down-time.sidebar",
        "icon": {
          "url": "{{localBaseUrl}}/img/logo.png",
          "url@2x": "{{localBaseUrl}}/img/logo.png"
        }
      }
    ],
    "webPanel": [
      {
        "key": "down-time.sidebar",
        "name": {
          "value": "Down Time Sidebar!"
        },
        "location": "hipchat.sidebar.right",
        "url": "{{localBaseUrl}}/sidebar"
      }
    ],
    "dialog": [
      {
        "key": "down-time.dialog",
        "title": {
          "value": "Hello Dialog!"
        },
        "url": "{{localBaseUrl}}/dialog",
        "options": {
          "style": "normal",
          "primaryAction": {
            "name": {
              "value": "Say Hello!"
            },
            "key": "down-time.dialog.action",
            "enabled": true
          },
          "size": {
            "width": "400px",
            "height": "200px"
          }
        }
      }
    ],
    "action": [
      {
        "key": "down-time.action",
        "name": {
          "value": "Open Hello Dialog!"
        },
        "target": "down-time.dialog",
        "location": "hipchat.input.action"
      }
    ]
  }
}
